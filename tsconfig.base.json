{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "strict": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@libs/core": ["libs/core/src/index.ts"],
      "@libs/domain/user": ["libs/domain/user/src/index.ts"],
      "@libs/domain/event": ["libs/domain/event/src/index.ts"],
      "@libs/domain/place": ["libs/domain/place/src/index.ts"],
      "@libs/api": ["libs/api/src/index.ts"],
      "@env/*": ["apps/barter-webview/src/environments/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
